<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/rlProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_layout"
        android:padding="20dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="AvatarPicture"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultavatar" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#3CB371"/>

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:backgroundTint="#3CB371"
            android:layout_marginTop="10dp"
            android:text="Edit"
            android:textSize="20dp"
            app:cornerRadius="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlSetting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/frame_layout"
        android:padding="20dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/tvEstimatedAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Estimated Amount / Month:"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etGoal"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Amount"
                android:background="#DCDCDC"
                android:inputType="text"
                android:text="Estimated Amount"/>

            <Button
                android:id="@+id/btnUpdateGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#3CB371"
                android:text="Update"
                app:cornerRadius="10dp" />

        </LinearLayout>


        <Button
            android:id="@+id/btnFeedBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#3CB371"
            android:layout_marginTop="24dp"
            android:text="Feedback"
            android:textSize="24dp"
            app:cornerRadius="10dp"/>

        <Button
            android:id="@+id/btnProfileSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#3CB371"
            android:layout_marginTop="24dp"
            android:text="Setting"
            android:textSize="24dp"
            app:cornerRadius="10dp"/>


    </LinearLayout>

</LinearLayout>